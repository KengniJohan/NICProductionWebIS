@model NICProductionWebIS.Models.NicModel

@{
    ViewData["Title"] = "Détails";
}

<div class="container py-4">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <h3 class="card-title mb-0">Détails de la Carte d'Identité</h3>
                <div class="d-flex gap-2">
                    <a class="btn btn-outline-warning btn-sm btn-icon" asp-action="Edit" asp-route-id="@Model.Id" title="Modifier" aria-label="Modifier">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16" aria-hidden="true">
                            <path d="M12.146.854a.5.5 0 0 1 .708 0l2.292 2.292a.5.5 0 0 1 0 .708l-9.193 9.193-3.182.846a.25.25 0 0 1-.316-.316l.846-3.182 9.193-9.193z"/>
                        </svg>
                        <span class="visually-hidden">Modifier</span>
                    </a>

                    <a class="btn btn-outline-secondary btn-sm btn-icon" asp-action="Index" title="Retour" aria-label="Retour">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16" aria-hidden="true">
                            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 1-.5.5H3.707l3.147 3.146a.5.5 0 0 1-.708.708l-4-4a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L3.707 7.5H14.5A.5.5 0 0 1 15 8z"/>
                        </svg>
                        <span class="visually-hidden">Retour</span>
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 text-center">
                    <div class="mb-3">
                        <strong>Photo</strong>
                    </div>
                    <div>
                        @if (Model.Photo != null && Model.Photo.Length > 0)
                        {
                            var base64 = Convert.ToBase64String(Model.Photo);
                            var src = $"data:image/png;base64,{base64}";
                            <img src="@src"
                                 class="img-thumbnail clickable-photo"
                                 style="max-width:150px;max-height:150px;border:1px solid #e1e1e1;object-fit:cover;"
                                 alt="Photo de @Model.Name @Model.Surname"
                                 data-src="@src"
                                 data-name="@Model.Name @Model.Surname" />
                        }
                        else
                        {
                            <div class="text-muted small">Aucune photo</div>
                        }
                    </div>
                </div>

                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Nom</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Prénom</dt>
                        <dd class="col-sm-8">@Model.Surname</dd>

                        <dt class="col-sm-4">Père</dt>
                        <dd class="col-sm-8">@Model.FatherName</dd>

                        <dt class="col-sm-4">Mère</dt>
                        <dd class="col-sm-8">@Model.MotherName</dd>

                        <dt class="col-sm-4">Taille</dt>
                        <dd class="col-sm-8">@Model.Height cm</dd>

                        <dt class="col-sm-4">Lieu de naissance</dt>
                        <dd class="col-sm-8">@Model.BornPlace</dd>

                        <dt class="col-sm-4">Date de naissance</dt>
                        <dd class="col-sm-8">@Model.BornDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Profession</dt>
                        <dd class="col-sm-8">@Model.Profession</dd>

                        <dt class="col-sm-4">Date d’émission</dt>
                        <dd class="col-sm-8">@Model.IssueDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Date d’expiration</dt>
                        <dd class="col-sm-8">@Model.ExpiredDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Genre</dt>
                        <dd class="col-sm-8">@Model.Gender</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_ImagePreviewModal")
