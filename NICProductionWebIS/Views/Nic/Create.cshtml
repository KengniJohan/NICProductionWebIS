@model NICProductionWebIS.Models.NicModel

@{
    ViewData["Title"] = "Créer une Carte";
}

<div class="container py-4">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title mb-3">Créer une Carte d'Identité</h3>

            <form asp-action="Create" enctype="multipart/form-data" asp-controller="Nic" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Nom <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" placeholder="Nom de famille" autofocus />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Surname" class="form-label">Prénom <span class="text-danger">*</span></label>
                        <input asp-for="Surname" class="form-control" placeholder="Prénom" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FatherName" class="form-label">Nom du père</label>
                        <input asp-for="FatherName" class="form-control" />
                        <span asp-validation-for="FatherName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MotherName" class="form-label">Nom de la mère</label>
                        <input asp-for="MotherName" class="form-control" />
                        <span asp-validation-for="MotherName" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Height" class="form-label">Taille (cm)</label>
                        <input asp-for="Height" class="form-control" type="number" min="0" />
                        <span asp-validation-for="Height" class="text-danger"></span>
                    </div>

                    <div class="col-md-8">
                        <label asp-for="BornPlace" class="form-label">Lieu de naissance</label>
                        <input asp-for="BornPlace" class="form-control" />
                        <span asp-validation-for="BornPlace" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="BornDate" class="form-label">Date de naissance</label>
                        <input asp-for="BornDate" class="form-control" type="date" />
                        <span asp-validation-for="BornDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Profession" class="form-label">Profession</label>
                        <input asp-for="Profession" class="form-control" />
                        <span asp-validation-for="Profession" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IssueDate" class="form-label">Date d’émission</label>
                        <input asp-for="IssueDate" class="form-control" type="date" />
                        <span asp-validation-for="IssueDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Gender" class="form-label">Genre</label>
                        <select asp-for="Gender" class="form-select" asp-items="@(ViewBag.Genders)">
                            <option value="">-- Sélectionner --</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Photo <span class="text-muted small">(PNG / JPG)</span></label>
                        <input id="photoFile" type="file" name="PhotoFile" class="form-control" accept="image/*" required />
                        <div id="photoPreview" class="mt-2"></div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-success">Créer</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Retour</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('photoFile')?.addEventListener('change', function (e) {
            const preview = document.getElementById('photoPreview');
            preview.innerHTML = '';
            const file = e.target.files[0];
            if (!file) return;
            const reader = new FileReader();
            reader.onload = function (ev) {
                const img = document.createElement('img');
                img.src = ev.target.result;
                img.className = 'img-thumbnail clickable-photo';
                img.style.maxHeight = '180px';
                img.dataset.src = ev.target.result;
                img.dataset.name = 'Nouvelle photo';
                img.setAttribute('tabindex', '0');
                img.addEventListener('click', function () { openImageModalFromElement(img); });
                img.addEventListener('keydown', function (e) {
                    if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); openImageModalFromElement(img); }
                });
                preview.appendChild(img);
            };
            reader.readAsDataURL(file);
        });

        @* include shared modal partial *@
    </script>

    @await Html.PartialAsync("_ImagePreviewModal")
}