@model NICProductionWebIS.Models.NicModel

@{
    ViewData["Title"] = "Créer une Carte";
}

<h2>Créer une Carte d'Identité</h2>

<form asp-action="Create" enctype="multipart/form-data" asp-controller="Nic" method="post">
    <div class="form-group">
        <label>Nom</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Prénom</label>
        <input asp-for="Surname" class="form-control" />
    </div>

    <div class="form-group">
        <label>Nom du père</label>
        <input asp-for="FatherName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Nom de la mère</label>
        <input asp-for="MotherName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Taille (cm)</label>
        <input asp-for="Height" class="form-control" />
    </div>

    <div class="form-group">
        <label>Lieu de naissance</label>
        <input asp-for="BornPlace" class="form-control" />
    </div>

    <div class="form-group">
        <label>Date de naissance</label>
        <input asp-for="BornDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label>Profession</label>
        <input asp-for="Profession" class="form-control" />
    </div>

    <div class="form-group">
        <label>Date d’émission</label>
        <input asp-for="IssueDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label>Genre</label>
        <select asp-for="Gender" class="form-control"
            asp-items="@(ViewBag.Genders)">
            <option value="">-- Sélectonner --</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
        @* <input asp-for="Gender" maxlength="1" class="form-control" /> *@
    </div>

    <div class="form-group">
        <label>Photo</label>
        <input type="file" name="PhotoFile" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success mt-3">Créer</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Retour</a>
</form>